# MongoDB Configuration
MONGODB_URL=mongodb://mongodb:27017
MONGODB_DB_NAME=amana_grc

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-this-in-production-min-256-bits
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# LDAP Configuration
LDAP_SERVER=ldap://your-ad-server:389
LDAP_BASE_DN=dc=municipality,dc=gov,dc=sa
LDAP_BIND_DN=cn=service-account,ou=services,dc=municipality,dc=gov,dc=sa
LDAP_BIND_PASSWORD=service-account-password
LDAP_USER_SEARCH_BASE=ou=users,dc=municipality,dc=gov,dc=sa
LDAP_USER_SEARCH_FILTER=(sAMAccountName={username})

# vLLM AI Configuration
VLLM_BASE_URL=http://vllm-server:8000
VLLM_MODEL_NAME=Qwen/Qwen3-Coder-MoE
VLLM_MAX_TOKENS=2048
VLLM_TEMPERATURE=0.1

# Application Configuration
APP_ENV=development
APP_DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Default Admin User (for initial setup)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=change-this-password
DEFAULT_ADMIN_EMAIL=admin@municipality.gov.sa
